                <div class="row">
                    <div class="col-xs-12" style="background-color: #fcfcfc; border: 1px solid #e8e8e8; margin-top: 18px">
                        <input id="subjectInput" ng-model="subjectText" placeholder="Subject of the email" type="text" name="emailSubject" value="">
                    </div>
                    <textarea id="bodyInput" ng-model="bodyText" name="emailBody" rows="8" placeholder="Type your broadcast message"></textarea>
                </div>
            </div>
            <label for="attachFiles" style="display:none">
                <div id="attachButton" class="fa fa-paperclip"></div>
            </label>
            <input type="file" id="attachFiles" style="display: none">
            <div id="attachmentList" style="margin-top: 15px"></div>
