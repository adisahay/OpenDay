					<!-- BEGIN PAGE BASE CONTENT -->
					<div class="row" style="margin-bottom: 12px;">
						<div class="col-md-5 col-xs-12">
							<div class="page-content-title">Attendance</div>
							<div class="page-content-subtitle">View Attendance Details</div>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-6 col-md-6 col-sm-5 col-xs-12">
							<div class="form-group">
								<div class="input-icon input-icon-lg">
									<i class="fa fa-search"></i>
									<input type="text" class="form-control input-lg custom-input-lg" id="searchStudent" placeholder="Search by Name/Class/Roll no."> </div>
							</div>
						</div>
						<div class="col-lg-2 col-md-3 col-sm-3 col-xs-6">
							<select id="filters" class="custom-filter-select" multiple="multiple">
							</select>
						</div>
						<div class="col-lg-2 col-md-2 col-sm-3 col-xs-5 pull-right" style="text-align: right;">
							<input type="text" id="selectDate" class="form-control input-lg custom-input-lg date-picker" placeholder="Select Date" style="text-align: center;" onkeydown="return false" data-date-end-date="+0d" size="16">
                        </div>
					</div>
					<div class="row">
						<div class="col-md-12">
							<div class="portlet">
								<div class="table-scrollable">
									<div data-bind="visible: !attendanceDetails().length" style="display:none; padding: 20px 0; text-align: center;">No Attendance</div>
									<table class="table table-striped table-hover" data-bind="visible: attendanceDetails().length" style="display: none;">
										<thead class="custom-table-head">
											<tr>
												<th></th>
												<th>Student Name</th>
												<th>Class</th>
												<th>Roll No.</th>
												<th>Status</th>
											</tr>
										</thead>
										<tbody class="custom-table-body rlist" data-bind="foreach: attendanceDetails" >
											<tr class="studentRow">
												<td></td>
												<td class="name" data-bind="text: student.name"></td>
												<td class="class" data-bind="text: classroom.name"></td>
												<td data-bind="text: student.rollNo?student.rollNo:'-'"></td>
												<td data-bind="text: absent?'Absent':'Present'"></td>
											</tr>
										</tbody>
									</table>
								</div>
							</div>
						</div>
					</div>
					<!-- END PAGE BASE CONTENT -->
