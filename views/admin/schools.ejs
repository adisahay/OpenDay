    <body class="page-container-bg-solid page-header-fixed page-sidebar-closed-hide-logo page-md">
        <!-- BEGIN HEADER -->
        <% include ./partialView/header.ejs %>
        <!-- END HEADER -->
        <!-- BEGIN HEADER & CONTENT DIVIDER -->
        <div class="clearfix"> </div>
        <!-- END HEADER & CONTENT DIVIDER -->
        <!-- BEGIN CONTAINER -->
        <div class="page-container">
            <!-- BEGIN SIDEBAR -->
            <% include ./partialView/sidebar.ejs %>
            <!-- END SIDEBAR -->
            <!-- BEGIN CONTENT -->
            <div class="page-content-wrapper">
                <!-- BEGIN CONTENT BODY -->
                <div class="page-content">
                    <!-- BEGIN PAGE BASE CONTENT -->
                    <div class="row" style="margin-bottom: 12px;">
                        <div class="col-lg-6 col-md-6 col-sm-7">
                            <div class="page-content-title">Schools</div>
                            <div class="page-content-subtitle">Add/edit schools details</div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-5 text-right" data-bind="click:$root.openAddModal">
                            <button type="button" class="btn custom-button-image"><i class="fa fa-plus custom-add-fa"></i></button><!--
                            --><button type="button" class="btn custom-button">Add School</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="portlet">
                                <div class="table-scrollable">
                                    <div data-bind="visible: !schoolDetails().length" style="display: none; padding: 20px 0; text-align: center;">No Schools</div>
                                    <table class="table table-striped table-hover" data-bind="visible: schoolDetails().length" style="display: none;">
                                        <thead class="custom-table-head">
                                            <tr>
                                                <th></th>
                                                <th>Name</th>
                                                <th>Username</th>
                                                <th>City</th>
                                            </tr>
                                        </thead>
                                        <tbody class="custom-table-body rlist" data-bind="foreach: schoolDetails" >
                                            <tr>
                                                <td></td>
                                                <td data-bind="text: name"></td>
                                                <td data-bind="text: username"></td>
                                                <td data-bind="text: address.city"></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- END PAGE BASE CONTENT -->
                    <div class="modal fade" id="schoolModal" tabindex="-1" role="basic" aria-hidden="true">
                        <div class="modal-dialog custom-modal-dialog">
                            <div class="modal-content">
                                <div class="custom-modal-header ui-draggable-handle">
                                    <button type="button" class="custom-modal-close" style="float: right;" data-dismiss="modal" aria-label="Close">
                                        <i class="glyphicon glyphicon-remove" style="color: black;"></i>
                                    </button>
                                    <h4 class="modal-title" style="font-weight: 400; font-size: 16px;">Edit Details</h4>
                                </div>
                                <div class="custom-modal-body" data-bind="with: newSchool">
                                    <div class="custom-modal-div">
                                        <div>Username</div>
                                        <input type="text" data-bind="value: username" placeholder="eg. contact@school.com" required />
                                    </div>
                                    <div class="custom-modal-div">
                                        <div>Password</div>
                                        <input type="password" data-bind="value: password" placeholder="eg. ******" required />
                                    </div>
                                    <div class="custom-modal-div">
                                        <div>School Name</div>
                                        <input type="text" data-bind="value: name" placeholder="eg. School Name" required />
                                    </div>
                                    <div class="custom-modal-div">
                                        <div>City</div>
                                        <input type="text" data-bind="value: address.city" placeholder="eg. Bangalore" required />
                                    </div>
                                </div>
                                <div class="modal-footer custom-modal-footer">
                                    <button type="button" id="create" class="btn theme-color-bck custom-modal-button" data-bind="click: $root.addSchool">SAVE</button>
                                </div>
                            </div>
                            <!-- /.modal-content -->
                        </div>
                        <!-- /.modal-dialog -->
                    </div>
                </div>
                <!-- END CONTENT BODY -->
            </div>
            <!-- END CONTENT -->
        </div>
        <!-- END CONTAINER -->
        <!-- BEGIN FOOTER -->
        <div class="page-footer">
            <div class="page-footer-inner">
