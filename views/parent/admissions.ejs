    <body class="page-container-bg-solid page-header-fixed page-sidebar-closed-hide-logo page-md">
        <!-- BEGIN HEADER -->
        <% include ./partial/header.ejs %>
        <!-- END HEADER -->
        <!-- BEGIN HEADER & CONTENT DIVIDER -->
        <div class="clearfix"> </div>
        <!-- END HEADER & CONTENT DIVIDER -->
        <!-- BEGIN CONTAINER -->
        <div class="page-container">
           <!-- BEGIN CONTENT -->
            <div class="page-content-wrapper">
                <!-- BEGIN CONTENT BODY -->
                <div class="page-content">
                    <!-- BEGIN PAGE BASE CONTENT -->
                    <div class="row" style="margin-bottom: 12px;">
                        <div class="col-md-5 col-xs-12">
                            <div class="page-content-title">Admissions</div>
                            <div class="page-content-subtitle">Fill admission form.</div>
                        </div>
                    </div>
                    <div class="row email" style="margin-top: 50px;">
                        <div class="col-lg-1 col-md-3 col-sm-2 col-xs-3 custom-modal-div form-group" style="line-height: 45px;">Email Id</div>
                        <div class="col-lg-4 col-md-6 col-sm-6 col-xs-9 custom-modal-div form-group">
                            <input type="text" style="margin-top: 0" id="email" placeholder="eg. abc@gmail.com" required />
                        </div>
                        <div class="col-lg-2 col-md-offset-0 col-md-3 col-sm-3 col-xs-3 col-sm-offset-2 col-xs-offset-3">
                            <button type="button" data-bind="click:$root.submitEmail" class="btn theme-color-bck custom-body-button">SUBMIT</button>
                        </div>
                    </div>
                    <div class="row otp" style="display: none; margin-top: 50px;">
                        <div class="col-lg-1 col-md-3 col-sm-2 col-xs-3 custom-modal-div form-group" style="line-height: 45px;">Enter OTP</div>
                        <div class="col-lg-4 col-md-6 col-sm-6 col-xs-9 custom-modal-div form-group">
                            <input type="text" style="margin-top: 0" id="otp" placeholder="eg. 123456" required />
                        </div>
                        <div class="col-lg-2 col-md-offset-0 col-md-3 col-sm-3 col-xs-3 col-sm-offset-2 col-xs-offset-3">
                            <button type="button" class="btn theme-color-bck custom-body-button" data-bind="click:$root.submitOTP">SUBMIT</button>
                        </div>
                    </div>
                    <!-- END PAGE BASE CONTENT -->
                    <div class="modal fade" id="studentModal" tabindex="-1" role="basic" aria-hidden="true">
                        <div class="modal-dialog modal-md">
                            <div class="modal-content">
                                <div class="custom-modal-header ui-draggable-handle">
                                    <button type="button" data-bind="click: $root.reload" class="custom-modal-close" style="float: right;" data-dismiss="modal" aria-label="Close">
                                        <i class="glyphicon glyphicon-remove" style="color: black;"></i>
                                    </button>
                                    <h4 class="modal-title" style="font-weight: 400; font-size: 16px;">Edit Details</h4>
                                </div>
                                <div class="tab-panel  margin-top-10 margin-bottom-10">
                                    <div class="row" style="border-bottom: 1px solid #f3f3f3;">
                                        <div class="col-md-3 col-xs-4 custom-modal-tab sd">
                                            <div class="active">Student Details</div>
                                        </div>
                                        <div class="col-md-3 col-xs-4 custom-modal-tab fd">
                                            <div>Family Details</div>
                                        </div>
                                        <div class="col-md-3 col-xs-4 custom-modal-tab hr">
                                            <div>Health Related</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="custom-modal-body" data-bind="with: newStudent">
                                    <div class="studentDetails">
                                        <div class="row">
                                            <div class="col-md-7 col-sm-8 col-xs-12 custom-modal-div">
                                                <div>Name of the Child (…as on Govt. ID or Passport)</div>
                                                <input id="childName" type="text" placeholder="eg. Shreeram Kushwaha" data-bind="value: name" required />
                                            </div>
                                            <div class="col-md-3 col-sm-4 col-xs-6 custom-modal-div">
                                                <div>Date of Birth</div>
                                                <input class="date-picker" id="dateofbirth" style="text-align: center;" data-bind="value: dob" onkeydown="return false" data-date-end-date="+0d" size="16" type="text" value="" placeholder="Select Date">
                                            </div>
                                        </div>
                                        <div class="row margin-top-30">
                                            <div class="col-md-12 col-xs-12 custom-modal-div">
                                                <div>Home Address</div>
                                                <input id="homeAddress" type="text" placeholder="Enter the complete address" data-bind="value: address" required />
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-5 col-xs-6 custom-modal-div">
                                                <div>Res. Tel No.</div>
                                                <input id="resTelNo" type="text" data-bind="value: phone().residence" placeholder="eg. 080-56733442" required />
                                            </div>
                                            <div class="col-md-5 col-xs-6 custom-modal-div">
                                                <div>Parent’s Mobile No.</div>
                                                <input id="parentMobile" type="text" data-bind="value: phone().parent" placeholder="eg. 9933565522" required />
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-10 col-xs-12 custom-modal-div">
                                                <div>Language/s spoken at home</div>
                                                <select id="languages" style="width:100%;" multiple="multiple"></select>
                                            </div>
                                        </div>
                                        <div class="row margin-top-20 margin-bottom-20">
                                            <div class="col-md-3">
                                                <button type="button" id="next0" class="btn theme-color-bck custom-modal-next-button" data-bind="click: $root.addStudent">Next</button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="familyDetails">
                                        <div class="row">
                                            <div class="col-md-8 col-xs-12 anySiblings" style="font-size: 12px;">
                                                <div class="margin-bottom-10">Any Siblings?</div>
                                                <div class="md-radio-inline">
                                                    <div class="md-radio">
                                                        <input type="radio" id="yes" name="sibling" class="md-radiobtn">
                                                        <label for="yes">
                                                            <span></span>
                                                            <span class="check"></span>
                                                            <span class="box"></span>Yes</label>
                                                    </div>
                                                    <div class="md-radio">
                                                        <input type="radio" id="no" name="sibling" class="md-radiobtn" checked="">
                                                        <label for="no">
                                                            <span></span>
                                                            <span class="check"></span>
                                                            <span class="box"></span>No
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row siblingDetails" style="display: none;">
                                            <div class="col-md-6 col-xs-9 custom-modal-div">
                                                <div>Name of the Sibling</div>
                                                <input id="sibling" type="text" placeholder="eg. Wendy Darling" required />
                                            </div>
                                            <div class="col-md-3 col-xs-3 custom-modal-div">
                                                <div>Age</div>
                                                <input id="age" type="text" placeholder="eg. 12" required />
                                            </div>
                                        </div>
                                        <div class="row addSiblings" style="display: none;">
                                            <div class="col-md-3">
                                                <button type="button" id="addSiblings" class="btn theme-color-bck custom-modal-add-button">Add Sibling<i class="fa fa-plus-square custom-fa" style="float: right;"></i></button>
                                            </div>
                                        </div>
                                        <hr class="custom-hr-equal">
                                        <div class="row">
                                            <div class="col-md-8 col-xs-12 custom-modal-div">
                                                <div>Father's Name</div>
                                                    <input type="text" data-bind="value: family
                                                ().father.name" placeholder="eg. George Darling" required />
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-5 col-xs-6 custom-modal-div">
                                                <div>Occupation</div>
                                                <input type="text" data-bind="value: family
                                                ().father.occupation" placeholder="eg. Software Engineer" required />
                                            </div>
                                            <div class="col-md-5 col-xs-6 custom-modal-div">
                                                <div>Designation</div>
                                                <input type="text" data-bind="value: family
                                                ().father.designation" placeholder="eg. Team Lead" required />
                                            </div>
                                        </div>
                                        <div class="row margin-top-20">
                                            <div class="col-md-12 col-xs-12 custom-modal-div">
                                                <div>Office Address</div>
                                                <input type="text" data-bind="value: family
                                                ().father.officeAddress" placeholder="Enter complete office address" required />
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-5 col-xs-6 custom-modal-div">
                                                <div>Office Tel No.</div>
                                                <input type="text" data-bind="value: family
                                                ().father.phone.office" placeholder="eg. 080-56733442" required />
                                            </div>
                                            <div class="col-md-5 col-xs-6 custom-modal-div">
                                                <div>Mobile No.</div>
                                                <input type="text" data-bind="value: family
                                                ().father.phone.mobile" placeholder="eg. 9933565522" required />
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-10 col-xs-12 custom-modal-div">
                                                <div>Email Id</div>
                                                <input type="text" data-bind="value: family
                                                ().father.emailId" placeholder="eg. george@peterpan.com" required />
                                            </div>
                                        </div>
                                        <hr class="custom-hr-equal">
                                        <div class="row">
                                            <div class="col-md-8 col-xs-9 custom-modal-div">
                                                <div>Mother's Name</div>
                                                <input type="text" data-bind="value: family
                                                ().mother.name" placeholder="eg. Mary Darling" required />
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-5 col-xs-6 custom-modal-div">
                                                <div>Occupation</div>
                                                <input type="text"  data-bind="value: family
                                                ().mother.occupation" placeholder="eg. Software Engineer" required />
                                            </div>
                                            <div class="col-md-5 col-xs-6 custom-modal-div">
                                                <div>Designation</div>
                                                <input type="text" data-bind="value: family
                                                ().mother.designation" placeholder="eg. Team Lead" required />
                                            </div>
                                        </div>
                                        <div class="row margin-top-20">
                                            <div class="col-md-12 col-xs-12 custom-modal-div">
                                                <div>Office Address</div>
                                                <input type="text" data-bind="value: family
                                                ().mother.officeAddress" placeholder="eg. Enter complete office address" required />
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-5 col-xs-6 custom-modal-div">
                                                <div>Office Tel No.</div>
                                                <input type="text" data-bind="value: family
                                                ().mother.phone.office" placeholder="eg. 080-56733442" required />
                                            </div>
                                            <div class="col-md-5 col-xs-6 custom-modal-div">
                                                <div>Mobile No.</div>
                                                <input type="text" data-bind="value: family
                                                ().mother.phone.mobile" placeholder="eg. 9933565522" required />
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-10 col-xs-12 custom-modal-div">
                                                <div>Email Id</div>
                                                <input type="text" data-bind="value: family
                                                ().mother.emailId" placeholder="eg. mary@peterpan.com" required />
                                            </div>
                                        </div>
                                        <div class="row margin-top-20 margin-bottom-20">
                                            <div class="col-md-3">
                                                <button type="button" id="next1" class="btn theme-color-bck custom-modal-next-button" data-bind="click: $root.updateFamilyDetails">Next</button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="healthRelated">
                                        <div class="row">
                                            <div class="col-md-7 col-xs-6 custom-modal-div">
                                                <div>Emergency Contact</div>
                                                <input type="text" data-bind="value: health().emergency.name" placeholder="eg. Nana" required />
                                            </div>
                                            <div class="col-md-4 col-xs-6 custom-modal-div">
                                                <div>Mobile No.</div>
                                                <input type="text" data-bind="value: health().emergency.mobile"placeholder="eg. 9933565522" required />
                                            </div>
                                        </div>
                                        <hr class="margin-top-10 margin-bottom-20">
                                        <div class="row">
                                            <div class="col-md-7 col-xs-6 custom-modal-div">
                                                <div>Child’s Doctor’s Name</div>
                                                <input type="text" data-bind="value: health().doctor.name" placeholder="eg. Nana" required />
                                            </div>
                                            <div class="col-md-4 col-xs-6 custom-modal-div">
                                                <div>Mobile No.</div>
                                                <input type="text" data-bind="value: health().doctor.mobile" placeholder="eg. 9933565522" required/>
                                            </div>
                                        </div>
                                        <hr class="margin-top-10 margin-bottom-20">
                                        <div class="row">
                                            <div class="col-md-12 col-xs-12 custom-modal-div">
                                                <div>Immunization Status (Tick for vaccination given)</div>
                                                <div class="md-checkbox-inline custom-md-checkbox-inline">
                                                    <div class="md-checkbox">
                                                        <input type="checkbox" name="immunizationStatus" id="bcg" class="md-check" value="1">
                                                        <label for="bcg">
                                                            <span></span>
                                                            <span class="check"></span>
                                                            <span class="box"></span>BCG</label>
                                                    </div>
                                                    <div class="md-checkbox">
                                                        <input type="checkbox" name="immunizationStatus" id="polio" class="md-check" value="2">
                                                        <label for="polio">
                                                            <span></span>
                                                            <span class="check"></span>
                                                            <span class="box"></span>POLIO</label>
                                                    </div>
                                                    <div class="md-checkbox">
                                                        <input type="checkbox" name="immunizationStatus" id="mmr" class="md-check" value="3">
                                                        <label for="mmr">
                                                            <span></span>
                                                            <span class="check"></span>
                                                            <span class="box"></span>MMR</label>
                                                    </div>
                                                    <div class="md-checkbox">
                                                        <input type="checkbox" name="immunizationStatus" id="dpt" class="md-check" value="4">
                                                        <label for="dpt">
                                                            <span></span>
                                                            <span class="check"></span>
                                                            <span class="box"></span>DPT</label>
                                                    </div>
                                                    <div class="md-checkbox">
                                                        <input type="checkbox" name="immunizationStatus" id="hep" class="md-check" value="5">
                                                        <label for="hep">
                                                            <span></span>
                                                            <span class="check"></span>
                                                            <span class="box"></span>HEP</label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <hr class="margin-top-10 margin-bottom-20">
                                        <div class="row">
                                            <div class="col-md-5 col-xs-6 custom-modal-div">
                                                <div>Last dewormed on</div>
                                                <input class="date-picker" id="dewormed" style="text-align: center;" onkeydown="return false" data-date-end-date="+0d" size="16" type="text" data-bind="value: health().dewormed" placeholder="Select Date">
                                            </div>
                                            <div class="col-md-5 col-xs-6 custom-modal-div">
                                                <div>Last Annual Medical Checkup on</div>
                                                <input class="date-picker" id="annualMedical" style="text-align: center;" onkeydown="return false" data-date-end-date="+0d" size="16" type="text" data-bind="value: health().annualMedical" placeholder="Select Date">
                                            </div>
                                        </div>
                                        <hr class="margin-top-10 margin-bottom-20">
                                        <div class="row">
                                            <div class="col-md-12 col-xs-12 custom-modal-div">
                                                <div>Health Problems, if any</div>
                                                <input type="text" data-bind="value: health().healthProblem" placeholder="Please mention the problems in detail." required />
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12 col-xs-12 custom-modal-div">
                                                <div>Allergies, if any</div>
                                                <input type="text" data-bind="value: health().allergies" placeholder="Please mention the allergies in detail." required />
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12 col-xs-12 custom-modal-div margin-bottom-10">
                                                <div class="margin-bottom-10">How was your child’s delivery?</div>
                                                <div class="md-radio-inline custom-radio-inline">
                                                    <div class="md-radio">
                                                        <input type="radio" id="normal" name="delivery" class="md-radiobtn">
                                                        <label for="normal">
                                                            <span></span>
                                                            <span class="check"></span>
                                                            <span class="box"></span>Normal</label>
                                                    </div>
                                                    <div class="md-radio">
                                                        <input type="radio" id="caesarean" name="delivery" class="md-radiobtn">
                                                        <label for="caesarean">
                                                            <span></span>
                                                            <span class="check"></span>
                                                            <span class="box"></span>Caesarean</label>
                                                    </div>
                                                    <div class="md-radio">
                                                        <input type="radio" id="forceps" name="delivery" class="md-radiobtn">
                                                        <label for="forceps">
                                                            <span></span>
                                                            <span class="check"></span>
                                                            <span class="box"></span>Forceps</label>
                                                    </div>
                                                    <div class="md-radio">
                                                        <input type="radio" id="others" name="delivery" class="md-radiobtn" checked="">
                                                        <label for="others">
                                                            <span></span>
                                                            <span class="check"></span>
                                                            <span class="box"></span>Others
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-8 col-xs-12 custom-modal-div">
                                                <input type="text" placeholder="If others, please mention." required />
                                            </div>
                                        </div>
                                        <hr class="margin-top-10 margin-bottom-20">
                                        <div class="row">
                                            <div class="col-md-12 col-xs-12 custom-modal-div">
                                                <div>Does your child have any special needs? Please share any behavioural concerns</div>
                                                <input type="text" data-bind="value: specialNeed" placeholder="Please metion the needs in detail." required />
                                            </div>
                                        </div>
                                        <div class="row margin-top-20 margin-bottom-20">
                                            <div class="col-md-3">
                                                <button type="button" id="next2" class="btn theme-color-bck custom-modal-next-button" data-bind="click: $root.updateHealthDetails">Save</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.modal-content -->
                        </div>
                        <!-- /.modal-dialog -->
                    </div>
                </div>
                <!-- END CONTENT BODY -->
            </div>
            <!-- END CONTENT -->
            <div class="custom-notification-bottom" style="display: none;">Successfully Assigned/Updated!</div>
        </div>
